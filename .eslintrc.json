{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:import/recommended"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "no-console": 0,
    "import/default": 2,
    "import/export": 2,
    "import/namespace": 2,
    "import/named": 2,
    "import/extensions": [
      "never",
      {
        "js": "ignorePackages"
      }
    ]
  }
}
